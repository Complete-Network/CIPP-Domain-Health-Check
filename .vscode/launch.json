{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm run start-api",
      "name": "Run emulator",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "npm start",
      "name": "Run frontend",
      "request": "launch",
      "type": "node-terminal",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Attach to PowerShell Functions",
      "type": "PowerShell",
      "request": "attach",
      "customPipeName": "AzureFunctionsPSWorker",
      "runspaceId": 1,
      "preLaunchTask": "func: host start"
    }
  ],
  "compounds": [
    {
      "name": "Launch it all ðŸš€",
      "configurations": ["Run frontend", "Run emulator"]
    }
  ]
}
